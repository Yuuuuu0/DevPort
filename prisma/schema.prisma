// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id          String   @id @default(cuid())
  nameZh      String?  // Project name in Chinese
  nameEn      String?  // Project name in English
  contentZh   String?  // Markdown content in Chinese
  contentEn   String?  // Markdown content in English
  images      String   // JSON array stored as string
  coverImage  String
  demoUrl     String?
  hidden      Boolean  @default(false)
  order       Int      @default(0) // Display order, lower number appears first
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

